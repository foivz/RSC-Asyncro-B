<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/institution_details_image"
        android:layout_alignParentTop="true"
        android:src="@drawable/bolnica"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/institution_details_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_text"
        android:text="@string/institution_address"/>
    <TextView
        android:id="@+id/institution_details_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_text"
        android:text="@string/institution_capacity"/>
</LinearLayout>