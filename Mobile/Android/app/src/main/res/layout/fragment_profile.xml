<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/profil_ime_prezime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Andro KreziÄ‡"
                android:textSize="@dimen/default_text"/>
            <TextView
                android:id="@+id/profil_datum_rodenja"
                android:layout_marginTop="10dp"
                android:layout_below="@id/profil_ime_prezime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30. svibnja 1992."
                android:textSize="@dimen/default_text"/>
            <TextView
                android:id="@+id/profil_krvna_grupa"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/profil_datum_rodenja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tip krvi: A+"
                android:textSize="@dimen/default_text"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zadnja donacija: 20. lipnja 2014."
            android:textSize="@dimen/default_text"
            android:id="@+id/profil_zadnja_donacija" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broj donacija: 3"
            android:textSize="@dimen/default_text"
            android:id="@+id/profil_broj_donacija" />

    </LinearLayout>
</LinearLayout>
