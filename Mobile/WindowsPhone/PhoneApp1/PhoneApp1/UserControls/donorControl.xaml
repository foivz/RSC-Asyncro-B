<UserControl x:Class="PhoneApp1.donorControl"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignWidth="411" Height="190">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}" Tap="LayoutRoot_Tap" Margin="0,0,0,20">
        <Grid Margin="0,0,0,155">
            <Image x:Name="slika" Source="/Assets/Icons/Check.png" Margin="0,0,0,-60" MaxHeight="60" MaxWidth="411"/>
        </Grid>
        <TextBlock x:Name="adresa" Text="Adresa 1, 23000 Zadar" Margin="0,82,10,49"/>
        <TextBlock x:Name="stanjeKrvi" Text="StanjeKrvi" Margin="0,121,10,10"/>

    </Grid>
</UserControl>