        </Grid>
        <TextBlock x:Name="username" Text="" Margin="0,136,10,93"/>
        <TextBlock x:Name="adress" Text="" Margin="0,161,10,70"/>
        <TextBlock x:Name="stored" Text="" Margin="0,189,10,40" />
